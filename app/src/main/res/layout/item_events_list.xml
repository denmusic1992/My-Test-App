<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewEventTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="baldkfajlsdfka" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewEventTitle"
            tools:text="[werwer[tpwoeirt[woei" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewPublicationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewDescription"
            tools:text="[werwer[tpwoeirt[woei" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/buttonLikePost"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imageViewEvent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="false"
            app:lottie_fileName="like_lottie.json"
            app:lottie_loop="false" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLikesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="22222"
            android:layout_margin="@dimen/common_margin"
            app:layout_constraintBottom_toBottomOf="@id/buttonLikePost"
            app:layout_constraintLeft_toRightOf="@+id/buttonLikePost"
            app:layout_constraintTop_toTopOf="@id/buttonLikePost" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewEvent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>